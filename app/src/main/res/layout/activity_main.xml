<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back"
    tools:context=".ui.MainActivity">

       <ImageView
           android:id="@+id/sun"
           android:layout_width="200dp"
           android:layout_height="200dp"
           app:layout_constraintStart_toEndOf="parent"
           app:layout_constraintEnd_toEndOf="parent"
           app:layout_constraintTop_toTopOf="parent"
           app:srcCompat="@drawable/sun" />

       <ImageView
           android:id="@+id/imageTop"
           android:layout_width="303dp"
           android:layout_height="270dp"
           android:layout_marginTop="-50dp"
           app:layout_constraintEnd_toEndOf="parent"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintTop_toBottomOf="@id/sun"
           app:srcCompat="@drawable/login" />

       <TextView
           android:id="@+id/who"
           android:layout_width="0dp"
           android:layout_height="wrap_content"
           android:fontFamily="@font/roboto_bold"
           android:layout_marginTop="5dp"
           android:text="@string/hello_kamu"
           android:textColor="@color/orange1"
           android:textSize="25sp"
           android:gravity="center"
           app:layout_constraintEnd_toEndOf="parent"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintTop_toBottomOf="@+id/imageTop" />

       <Button
           android:id="@+id/loginButton"
           android:layout_marginStart="36dp"
           android:layout_marginEnd="36dp"
           android:layout_width="match_parent"
           android:layout_height="60dp"
           android:layout_marginTop="20dp"
           android:backgroundTint="@color/orange2"
           android:fontFamily="@font/roboto_bold"
           android:textSize="20sp"
           android:text="@string/mulai"
           app:layout_constraintEnd_toEndOf="parent"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintTop_toBottomOf="@+id/who" />

       <Button
           android:id="@+id/cek"
           android:layout_marginStart="36dp"
           android:layout_marginEnd="36dp"
           android:layout_width="match_parent"
           android:layout_height="60dp"
           android:layout_marginTop="20dp"
           android:backgroundTint="@color/orange2"
           android:fontFamily="@font/roboto_bold"
           android:textSize="20sp"
           android:text="cek botnav"
           app:layout_constraintEnd_toEndOf="parent"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintTop_toBottomOf="@+id/loginButton" />
       <Button
           android:id="@+id/cek2"
           android:layout_marginStart="36dp"
           android:layout_marginEnd="36dp"
           android:layout_width="match_parent"
           android:layout_height="60dp"
           android:layout_marginTop="20dp"
           android:backgroundTint="@color/orange2"
           android:fontFamily="@font/roboto_bold"
           android:textSize="20sp"
           android:text="cek Detail"
           app:layout_constraintEnd_toEndOf="parent"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintTop_toBottomOf="@+id/cek" />

       <Button
           android:id="@+id/cek4"
           android:layout_width="match_parent"
           android:layout_height="60dp"
           android:layout_marginStart="36dp"
           android:layout_marginEnd="36dp"
           android:backgroundTint="@color/orange2"
           android:fontFamily="@font/roboto_bold"
           android:text="cek Experimental"
           android:textSize="20sp"
           app:layout_constraintEnd_toEndOf="parent"
           app:layout_constraintHorizontal_bias="0.0"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintTop_toTopOf="parent" />

       <TextView
           android:id="@+id/copyrightTextView"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="@string/bangkit_2023"
           android:layout_marginBottom="20dp"
           android:textSize="14sp"
           app:layout_constraintBottom_toBottomOf="parent"
           app:layout_constraintEnd_toEndOf="parent"
           app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>