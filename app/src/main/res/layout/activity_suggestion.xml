<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.homepage.detection.SuggestionActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgPenyakit"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/penyakit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Penyakit"
            android:fontFamily="@font/roboto_bold"
            android:textSize="28sp"
            android:paddingHorizontal="16dp"
            android:paddingVertical="8dp"/>

        <TextView
            android:id="@+id/deskripsi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_regular"
            android:paddingHorizontal="16dp"
            android:paddingVertical="8dp" />

        <TextView
            android:id="@+id/gejala"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gejala Penyakit"
            android:fontFamily="@font/roboto_bold"
            android:textSize="18sp"
            android:paddingHorizontal="16dp"
            android:paddingVertical="8dp" />

        <ListView
            android:id="@+id/listGejala"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:fontFamily="@font/roboto_regular"
            android:divider="@android:color/darker_gray"
            android:dividerHeight="1dp"
            android:paddingHorizontal="16dp"
            android:paddingVertical="8dp"
            android:nestedScrollingEnabled="true" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Saran Penyembuhan"
            android:fontFamily="@font/roboto_bold"
            android:textSize="18sp"
            android:paddingHorizontal="16dp"
            android:paddingVertical="8dp" />

        <ListView
            android:id="@+id/lisSaran"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:fontFamily="@font/roboto_regular"
            android:divider="@android:color/darker_gray"
            android:dividerHeight="1dp"
            android:paddingHorizontal="16dp"
            android:paddingVertical="8dp"
            android:nestedScrollingEnabled="true" />

    </LinearLayout>
</ScrollView>
